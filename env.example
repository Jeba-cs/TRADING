# .env.example
# Copy this file to .env and fill in your actual API keys

# =============================================================================
# MARKET DATA API KEYS
# =============================================================================

# Alpha Vantage (Free: 500 calls/day, Paid plans available)
# Get your key from: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_KEY=your_alpha_vantage_api_key_here

# IEX Cloud (Free tier: 50k calls/month)
# Get your token from: https://iexcloud.io/
IEX_CLOUD_TOKEN=your_iex_cloud_token_here

# Polygon.io (Real-time and historical data)
# Get your key from: https://polygon.io/
POLYGON_API_KEY=your_polygon_api_key_here

# Yahoo Finance is free and doesn't require an API key
# It's used as the default fallback data source

# =============================================================================
# AI/LLM API KEYS
# =============================================================================

# OpenAI (GPT-4, GPT-3.5-turbo)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini (Free tier available)
# Get your key from: https://ai.google.dev/
GEMINI_API_KEY=your_google_gemini_api_key_here

# Anthropic Claude (Claude 3)
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite (Default - no setup required)
DATABASE_URL=sqlite:///trading_system.db

# PostgreSQL (For production)
# DATABASE_URL=postgresql://username:password@localhost:5432/trading_db

# =============================================================================
# REDIS CONFIGURATION (Optional - for caching)
# =============================================================================

# Redis URL for caching (Optional)
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Debug mode (True/False)
DEBUG_MODE=False

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Environment (development, staging, production)
ENVIRONMENT=development

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================

# Default trading mode (paper, live, analysis)
DEFAULT_TRADING_MODE=paper

# Maximum position size as percentage of portfolio (0.01 = 1%)
MAX_POSITION_SIZE=0.10

# Default stop loss percentage (0.03 = 3%)
DEFAULT_STOP_LOSS=0.03

# Maximum portfolio risk per trade (0.02 = 2%)
MAX_PORTFOLIO_RISK=0.02

# =============================================================================
# BROKER API CONFIGURATION (Optional)
# =============================================================================

# Interactive Brokers
# IB_GATEWAY_HOST=localhost
# IB_GATEWAY_PORT=7497
# IB_CLIENT_ID=1

# Alpaca (Commission-free US stocks)
# ALPACA_API_KEY=your_alpaca_key
# ALPACA_SECRET_KEY=your_alpaca_secret
# ALPACA_BASE_URL=https://paper-api.alpaca.markets  # Paper trading
# ALPACA_BASE_URL=https://api.alpaca.markets        # Live trading

# TD Ameritrade
# TD_CLIENT_ID=your_td_client_id
# TD_REFRESH_TOKEN=your_td_refresh_token

# =============================================================================
# NOTIFICATION SETTINGS (Optional)
# =============================================================================

# Email notifications
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# EMAIL_USERNAME=your_email@gmail.com
# EMAIL_PASSWORD=your_app_password
# EMAIL_TO=recipient@example.com

# Slack notifications
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Discord notifications
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Secret key for session management
SECRET_KEY=your_secret_key_here_change_this_in_production

# JWT secret for API authentication (if using API mode)
JWT_SECRET=your_jwt_secret_here

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Maximum concurrent API requests
MAX_CONCURRENT_REQUESTS=10

# Request timeout in seconds
REQUEST_TIMEOUT=30

# Cache expiration time in seconds
CACHE_EXPIRATION=300

# Maximum memory usage for caching (MB)
MAX_CACHE_SIZE=500

# =============================================================================
# EXAMPLE VALUES (Remove in production)
# =============================================================================

# Example configuration - replace with real values
# OPENAI_API_KEY=sk-1234567890abcdef...
# ALPHA_VANTAGE_KEY=ABCD1234EFGH5678
# IEX_CLOUD_TOKEN=pk_1234567890abcdef...

# =============================================================================
# NOTES
# =============================================================================

# 1. Never commit the actual .env file to version control
# 2. Always use strong, unique API keys
# 3. Rotate API keys regularly
# 4. Monitor API usage to avoid quota limits
# 5. Use paper trading first before live trading
# 6. Keep backups of your configuration
# 7. Test all APIs before production deployment